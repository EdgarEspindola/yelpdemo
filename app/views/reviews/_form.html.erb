<%= form_with(model: [restaurant, review], local: true) do |form| %>
  <%= render 'layouts/error_messages', resource: review %>

  <div id="star-rating"></div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :review_comment, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script>
    $('#star-rating').raty({
        path: "/jquery.raty/",
        scoreName: "review[rating]"
    });
</script>